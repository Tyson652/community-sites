{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "jsx": "react",
    "lib": ["dom", "es2015", "es2017"],
    "moduleResolution": "node",
    "strict": true,
    "noEmit": true, // Don't create files when running tsc
    "skipLibCheck": true,
    "esModuleInterop": true,
    "typeRoots": ["gatsby-community-theme/src/types"]
  },
  "include": ["gatsby-community-theme/src/**/*", "elixir-sydney/src/**/*"]
}
