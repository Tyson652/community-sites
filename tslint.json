{
  "defaultSeverity": "error",
  "extends": [
    "tslint:recommended",
    "tslint-config-prettier",
    "tslint-react",
    "tslint-react-hooks"
  ],
  "jsRules": {
    "object-literal-sort-keys": false,
    "no-console": false,
    "one-variable-per-declaration": false,
    "curly": [true, "ignore-same-line"],
    "no-shadowed-variable": false
  },
  "linterOptions": {
    "exclude": ["*.json", "**/*.json"]
  },
  "rules": {
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "quotemark": [
      true,
      "double",
      "avoid-escape",
      "avoid-template",
      "jsx-double"
    ],
    "no-console": false,
    "object-literal-sort-keys": false,
    "interface-name": [true, "never-prefix"],
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-leading-underscore",
      "allow-pascal-case"
    ],
    "react-hooks-nesting": "error"
  },
  "rulesDirectory": []
}
